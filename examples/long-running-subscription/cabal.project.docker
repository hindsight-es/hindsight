packages: ./*.cabal

-- Reference hindsight packages from GitHub
-- Use update-commit.sh to update this to the latest docker-example branch commit
-- NOTE: Change to 'main' branch once this is merged
source-repository-package
    type: git
    location: https://github.com/hindsight-es/hindsight.git
    tag: 93ad4a2529598a82a28f98aa55374314e5212a80
    subdir:
      hindsight-core
      hindsight-postgresql-store
      hindsight-postgresql-projections
      hindsight-memory-store
      hindsight-filesystem-store

-- Required for tmp-postgres dependency
source-repository-package
    type: git
    location: https://github.com/jfischoff/tmp-postgres.git
    tag: 7f2467a6d6d5f6db7eed59919a6773fe006cf22b

allow-newer:
    hasql-notifications:hasql-pool
